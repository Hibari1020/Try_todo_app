<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_user.id == micropost.user_id %>
  <% if micropost.done? %>
  <span class="not_donebutton"><%= button_to "not Done", update_not_done_micropost_path(micropost), method: :post %><span>
  <% else %>
  <span class="donebutton"><%= button_to "Done", update_done_micropost_path(micropost), method: :post %></span>
  <% end %>
  <% else %>
  <% end %>
</li>
